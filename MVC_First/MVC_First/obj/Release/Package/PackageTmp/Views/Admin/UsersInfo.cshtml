@model IEnumerable<MVC_First.Models.user>
@using MVC_First.Models

@{
    ViewBag.Title = "UsersInfo";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}
<div class ="container" style ="background-color:mintcream; height:430px; width:650px"> 
<h2>UsersInfo:</h2><br><br>

<p style ="font-size:medium">
    @Html.ActionLink( "Create New","AddSingleUser")
</p>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.uid)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.uid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <!-- <td style ="font-size:small">
            @Html.ActionLink("Edit", "EditUser", new {  id=item.uid }) |
            @Html.ActionLink("Details", "Details", new { id=item.uid }) |
            @Html.ActionLink("Delete", "DeleteUser", new {  id=item.uid })
        </td>-->
    </tr>
}

</table>
