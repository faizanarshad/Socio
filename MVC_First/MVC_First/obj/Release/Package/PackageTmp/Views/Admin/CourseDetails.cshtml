@model IEnumerable<MVC_First.Models.cours>

@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<div class ="container" style ="background-color:mintcream; height:430px; width:650px"> 

<h2>CourseDetails:</h2><br><br>

<p style ="font-size:medium">
    @Html.ActionLink("Create New", "AddCourse")
</p>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.cid)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.creditHours)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.cid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.creditHours)
        </td>

  </tr>
}

</table>
    <br><br><div style ="width:200px;position:relative; margin-left:500px; font-size:xx-large;">
             @Html.ActionLink("Back", "AdminHome")
     </div>   

</div>