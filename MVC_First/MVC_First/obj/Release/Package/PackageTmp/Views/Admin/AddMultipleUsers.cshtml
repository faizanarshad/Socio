@{
    ViewBag.Title = "AddMultipleUsers";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

 <title>@ViewBag.Title</title> 

<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css">
<link type= "text/css" href="~/Content/bootstrap.css" rel="stylesheet" />
<script class="cssdeck" src="~/Scripts/jquery.min.js"></script>
<script class="cssdeck" src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-1.9.1.js"></script>

<div class ="container" style ="background-color:mintcream; height:430px; width:550px">
    <p>
        <p style ="font-size:large">Instructions:</p>
        Please upload a <b> text </b> file which contain one user per line.Each field should be "," separated with the following format<br><br>
        User ID,UserName,userType,Email ID<br>
    </p>
    <form class="form-signin" role="form" method ="post" action ="/Admin/SaveFile" enctype="multipart/form-data">

        <h2 class="form-signin-heading">UpLoad File:</h2><br><br>
        <input type="file" name = "text">

        <br><button class="btn btn-lg btn-primary btn-block" type="submit" style ="width:350px" id ="save">UpLoad</button>
        

    </form>

    <div style ="width:200px;position:relative; top:-40px; margin-left:400px; font-size:xx-large;">
             @Html.ActionLink("Back", "UserSetup")
        </div>
</div>