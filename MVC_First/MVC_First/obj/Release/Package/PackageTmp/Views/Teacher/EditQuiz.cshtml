@model IEnumerable<MVC_First.Models.quiz>

@{
    ViewBag.Title = "EditQuiz";
}

<title>EditQuiz</title>

<div class ="container" style ="background-color:mintcream; height:430px; width:800px"> 
<h2>EditQuiz:</h2><br><br>

<table class="table table-striped table-bordered table-condensed">

    <tr>
        <th style ="font-size:medium">
            Quiz ID
        </th>
        <th style ="font-size:medium">
            Course ID
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.totalQuestion)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.TotalMarks)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.TotalTime)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.topic)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.qid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.cid)
        </td>
         <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.totalQuestion)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.TotalMarks)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.TotalTime) Minuts
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.topic)
        </td>
        <td style ="font-size:small">
            @Html.ActionLink("Edit", "Edit", new {  id=item.qid })
           
        </td>
    </tr>
}

</table>

    <br><br><div style ="width:200px;position:relative;top:-30px; margin-left:700px; font-size:xx-large;">
             @Html.ActionLink("Back", "TeacherHome")
     </div>
</div>