@model MVC_First.Models.teacher
@{
    ViewBag.Title = "TeacherHome";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<h2> Teacher ID : @ViewBag.ttid</h2>
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css">
<link type= "text/css" href="~/Content/bootstrap.css" rel="stylesheet" />
<script class="cssdeck" src="~/Scripts/jquery.min.js"></script>
<script class="cssdeck" src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
@{
    if ( ViewBag.message == 1 )
    {
        <script>
            alert("Questions added sucessfully...!!");
         </script>
    }
    else if ( ViewBag.message == 2 )
    {
        <script>
            alert("Quiz  Generated sucessfully...!!");
         </script>
    }
    else
    {
        ViewBag.message = -1;
    }
}
<div class ="container" style ="background-color:mintcream; height:500px; width:50%">

        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px;" id ="btn1" onclick="location.href='@Url.Action("ConductQuiz", "Teacher")'">Conduct Quiz</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px; margin-left:100px" id ="btn2" onclick="location.href='@Url.Action("EditQuiz", "Teacher")'">Edit Quiz</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px; margin-top:10%" id ="btn3" onclick="location.href='@Url.Action("ViewAssignments", "Teacher")'">View Assignments</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px; margin-left:100px;margin-top:10%" id ="btn4">View Assignments Results</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px;margin-top:10%" id ="btn5" onclick="location.href='@Url.Action("ViewQuizes", "Teacher")'">View Quizes</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px; margin-left:100px;margin-top:10%" id ="btn6" onclick="location.href='@Url.Action("ViewQuizesResult", "Teacher")'">View Quizes Results</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px; margin-top:10%" id ="btn7" onclick="location.href='@Url.Action("AddQuestions", "Teacher")'">Add Questions</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px;margin-left:100px;margin-top:10%" id ="btn8">Provide Feedback</button>
        <button class="btn btn-lg btn-primary" type="submit" style ="width:230px;margin-left:150px;margin-top:10%" id ="btn9" onclick="location.href='@Url.Action("UploadAssignment", "Teacher")'">Upload Assignment</button>
</div>   

