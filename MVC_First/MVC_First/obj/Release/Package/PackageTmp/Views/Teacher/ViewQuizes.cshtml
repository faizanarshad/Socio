@model IEnumerable<MVC_First.Models.quiz>

@{
    ViewBag.Title = "ViewQuiz";
}

<title>ViewQuiz</title>

<div class ="container" style ="background-color:mintcream; height:430px; width:800px"> 


<table class="table table-striped table-bordered table-condensed">

    <tr>
        <th style ="font-size:medium">
            Quiz ID
        </th>
        <th style ="font-size:medium">
            Course ID
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.totalQuestion)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.TotalMarks)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.TotalTime)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.topic)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.qid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.cid)
        </td>
         <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.totalQuestion)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.TotalMarks)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.TotalTime) Minuts
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.topic)
        </td>
    </tr>
}

</table>
    <br><div style ="width:200px;position:relative;top:-20px; margin-left:650px; font-size:xx-large;">
             @Html.ActionLink("Back", "TeacherHome")
     </div>   

</div>