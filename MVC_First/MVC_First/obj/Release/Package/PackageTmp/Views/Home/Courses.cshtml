@model IEnumerable<MVC_First.Models.cours>

@{
    ViewBag.Title = "Courses";
}

<div class ="container" style ="background-color:mintcream; height:430px; width:650px"> 

<h2>CourseDetails:</h2><br><br>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.cid)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.creditHours)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.cid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.creditHours)
        </td>
    </tr>
}

</table>
    
</div>