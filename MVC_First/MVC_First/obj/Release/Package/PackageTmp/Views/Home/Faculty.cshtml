@model IEnumerable<MVC_First.Models.teacher>

@{
    ViewBag.Title = "Faculty";
}

<
<div class ="container" style ="background-color:mintcream; height:430px; width:650px"> 

<h2>Faculty:</h2><br><br>

<table class="table table-striped table-bordered table-condensed">

    <tr>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.tid)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.email)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.tid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.email)
        </td>
    </tr>
}

</table>
</div>