@model IEnumerable<MVC_First.Models.quiz>

@{
    ViewBag.Title = "StartQuiz";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<div class ="container" style ="background-color:mintcream; height:430px; width:800px"> 
<h2>Start Quiz</h2><br><br>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th style ="font-size:medium">
            Course ID
        </th>
        <th style ="font-size:medium">
            Teacher ID
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.totalQuestion)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.TotalMarks)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.TotalTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.cid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.tid)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.totalQuestion)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.TotalMarks)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td style ="font-size:small">
            @Html.DisplayFor(modelItem => item.TotalTime)
            Minuts
        </td>
        <td style ="font-size:small">
            @Html.ActionLink("Start", "Start", new {  id=item.cid , totalQ = item.totalQuestion , qid = item.qid , tid = item.tid })
         </td>
    </tr>
}

</table>
    <br><br><div style ="width:200px;position:relative; margin-left:700px; font-size:xx-large;">
             @Html.ActionLink("Back", "StudentHome")
     </div>   
    </div>