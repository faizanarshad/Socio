    .demo-section {
            width: 600px;	
        }
                
        .metrotable {
            width: 100%;
            border-collapse: collapse;
            border:dashed;
        }
                
        .metrotable > thead > tr > th 
        {
            font-size: 1.3em;
            padding-top: 0;
            padding-bottom: 5px;
            text-align:center;
        }

</style>

