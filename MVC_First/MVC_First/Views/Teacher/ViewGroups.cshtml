@model IEnumerable<MVC_First.Models.group>

@{
    ViewBag.Title = "ViewGroups";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}
<link href="~/Content/kendo/2013.3.1119/kendo.flat.min.css" rel="stylesheet" />
<link href="~/Content/kendo/2013.3.1119/kendo.common.min.css" rel="stylesheet" />
<script src="~/Scripts/kendo/2013.3.1119/jquery.min.js"></script>
<script src="~/Scripts/kendo/2013.3.1119/kendo.web.min.js"></script>

<script>
  $('document').ready(function () {


        $(".k-primary").kendoButton();

  });
</script>

<div class ="k-content" style ="background-color:mintcream; height:auto; width:50%;margin-left:25%"> 
    <h2 class ="k-header">View Group:</h2>

    <button class="k-primary" type="submit" id ="btn2" style="width:25%;height:auto; margin-bottom:3%" onclick="location.href='@Url.Action("CreateGroup", "Teacher")'">Create New Group</button>
<table class="metrotable">
    <tr>
        <th style ="font-size:medium">
            Name
        </th>
        <th style ="font-size:medium">
            Admin
        </th>
        <th style ="font-size:medium">
            Creation Date
        </th>
          
    <!--    <th style ="font-size:medium">
            Grade Book
        </th>-->
        <th style ="font-size:medium">
            View Group

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.g_creator)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.time).ToString().Split(' ')[0]
        </td>
     
         <td style ="font-size:small;text-align:center">
           @Html.ActionLink("View Group", "ShowGroupData", new {gid=item.gid }) 
            
        </td>
      
    </tr>
}

</table>
    <br><br><div style ="width:20%;position:relative; margin-left:90%; font-size:x-large;">
             @Html.ActionLink("Back", "DiscussionForum")
     </div>   

</div>

<style scoped>
        
    .demo-section {
            width: 600px;	
        }
                
        .metrotable {
            width: 100%;
            border-collapse: collapse;
            border:dashed;
        }
                
        .metrotable > thead > tr > th 
        {
            font-size: 1.3em;
            padding-top: 0;
            padding-bottom: 5px;
            text-align:center;
        }

</style>
