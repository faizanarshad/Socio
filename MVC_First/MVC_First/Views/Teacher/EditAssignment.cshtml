@model MVC_First.Models.assignment

@{
    ViewBag.Title = "EditAssignment";
}

<link href="~/Content/themes/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/themes/jquery.ui.datepicker.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.ui.datepicker.js"></script>
    
        <link href="~/Content/kendo/2013.3.1119/kendo.flat.min.css" rel="stylesheet" />

    <link href="~/Content/kendo/2013.3.1119/kendo.common.min.css" rel="stylesheet" />
    <script src="~/Scripts/kendo/2013.3.1119/jquery.min.js"></script>
    <script src="~/Scripts/kendo/2013.3.1119/kendo.web.min.js"></script>


<script>
    $(document).ready(function () {
        $("#datetimepicker").kendoDateTimePicker({

        });


        $("#datetimepicker2").kendoDateTimePicker({


        });
    });
</script>

<div class ="k-content" style ="background-color:mintcream; height:auto; width:50%;margin-left:25%">
<h2 class ="k-header">Edit Assignments:</h2>

<form class="forms" role="form" method ="post" action ="/Teacher/EditAssignment" enctype="multipart/form-data">

    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Assignment</legend>

        <div class="editor-label" hidden>
            @Html.LabelFor(model => model.aid)
        </div>
        <div class="editor-field" hidden>
            @Html.EditorFor(model => model.aid)
            @Html.ValidationMessageFor(model => model.aid)
        </div>

        <div class="editor-label" hidden>
            @Html.LabelFor(model => model.tid)
        </div>
        <div class="editor-field" hidden>
            @Html.EditorFor(model => model.tid)
            @Html.ValidationMessageFor(model => model.tid)
        </div>

        <div class="editor-label" hidden>
            @Html.LabelFor(model => model.cid)
        </div>
        <div class="editor-field" hidden>
            @Html.EditorFor(model => model.cid)
            @Html.ValidationMessageFor(model => model.cid)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.totalMarks)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.totalMarks)
            @Html.ValidationMessageFor(model => model.totalMarks)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.startDate)
        </div>
        <div class="editor-field">
            <input type ="datetime" id="datetimepicker" name="startDate" value="@Html.DisplayFor(model => model.startDate)" style="width:40%;" />
            @Html.ValidationMessageFor(model => model.startDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.endDate)
        </div>
        <div class="editor-field">
            <input type ="datetime" id="datetimepicker2" name="endDate" value ="@Html.DisplayFor(model => model.endDate)" style="width:40%;" />
            @Html.ValidationMessageFor(model => model.endDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.aNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.aNumber)
            @Html.ValidationMessageFor(model => model.aNumber)
        </div>
        <div class="editor-label">
            Upload Assignment
        </div>
        <div class="editor-field">
            <input type="file" name = "text"/>
            @Html.ValidationMessageFor(model => model.questionFilePath)
        </div>
        <div class="editor-label">
            Upload Solution File
        </div>
        <div class="editor-field">
            <input type="file" name = "text"/>
            @Html.ValidationMessageFor(model => model.solutionFilePath)
        </div>
        <input type="hidden" name="Q" value="@Html.DisplayFor(model => model.questionFilePath)" />
        <input type="hidden" name="S" value="@Html.DisplayFor(model => model.solutionFilePath)" />

        <input type="hidden" name="start" value="@Html.DisplayFor(model => model.startDate)" />
        <input type="hidden" name="end" value="@Html.DisplayFor(model => model.endDate)" />
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
</form>

<div>
    @Html.ActionLink("Back to List", "TeacherHome")
</div>