@model IEnumerable<MVC_First.Models.cours>

@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<script class="cssdeck" src="~/Scripts/jquery.min.js"></script>
        <link href="~/Content/kendo/2013.3.1119/kendo.flat.min.css" rel="stylesheet" />
        <link href="~/Content/kendo/2013.3.1119/kendo.common.min.css" rel="stylesheet" />
        <script src="~/Scripts/kendo/2013.3.1119/jquery.min.js"></script>
        <script src="~/Scripts/kendo/2013.3.1119/kendo.web.min.js"></script>

<div class ="k-content" style ="background-color:mintcream; height:auto; width:50%;margin-left:25%"> 
    <h2 class ="k-header">Courses Details:</h2>
<table class="metrotable">
    <tr>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.cid)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th style ="font-size:medium">
            @Html.DisplayNameFor(model => model.creditHours)
        </th>
          
    <!--    <th style ="font-size:medium">
            Grade Book
        </th>-->
        <th style ="font-size:medium">
            Attendance

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.cid)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.creditHours)
        </td>
     
         <td style ="font-size:small;text-align:center">
           @Html.ActionLink("Attendance", "Attendance", new {c=item.cid }) 
            
        </td>
      
    </tr>
}

</table>
    <br><br><div style ="width:20%;position:relative; margin-left:90%; font-size:x-large;">
             @Html.ActionLink("Back", "StudentHome")
     </div>   

</div>

<style scoped>
                .demo-section {
                    width: 600px;	
                }
                
                .metrotable {
                	width: 100%;
                	border-collapse: collapse;
                    border:dashed;
                }
                
                .metrotable > thead > tr > th 
                {
                	font-size: 1.3em;
                	padding-top: 0;
                	padding-bottom: 5px;
                    text-align:center;
                }
                
            </style>
