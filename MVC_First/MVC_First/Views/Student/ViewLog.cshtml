@model IEnumerable<MVC_First.Models.Log>

@{
    ViewBag.Title = "ViewLog";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<div class ="k-content" style ="background-color:mintcream; height:auto; width:50%;margin-left:25%">
<h2 class ="k-header">View Log</h2>

<table class="metrotable">
    <tr>
        <th>
            Student ID
        </th>
        <th>
            Course ID
        </th>
        <th>
            TeacherName
        </th>
        <th>
            Type
        </th>
        <th>
            Total marks
        </th>
        <th>
            Obtained marks
        </th>
        <th>
            Date
        </th>
        <th>
            Discription
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.studentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totalMarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.obtainedMarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discription)
        </td>
    </tr>
}

</table>
    <br><br><div style ="width:20%;position:relative; margin-left:90%; font-size:x-large;">
             @Html.ActionLink("Back", "StudentHome")
               </div>

    </div>
<style scoped>
                .demo-section {
                    width: 600px;	
                }
                
                .metrotable {
                	width: 100%;
                	border-collapse: collapse;
                    border:dashed;
                }
                
                .metrotable > thead > tr > th 
                {
                	font-size: 1.3em;
                	padding-top: 0;
                	padding-bottom: 5px;
                    text-align:center;
                }
                
            </style>
