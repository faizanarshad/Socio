<script>
$(document).ready(function () {
            
                $("#ccid").focusin(function () {

                    $("#ccid option").remove();

                    $.getJSON("/Admin/GetCourses", function (data) {
                       
                        $.each(data, function (i, item) {
                            $("#ccid").append('<option value=' + item.cid + '>' + item.cid + '</option>');
                            
                        });

                    });
                });

                $("#ccid").focusin(function () {

                    $("#ccid option").remove();

                    $.getJSON("/Admin/GetStudents", function (data) {

                        $.each(data, function (i, item) {
                            $("#ssid").append('<option value=' + item.sid + '>' + item.sid + '</option>');

                        });

                    });
                });

            });
</script>

<div class ="l-content" style="height:auto; width:40%; margin-left:25%">
        <h2 class="k-header">Assign Course To Student:</h2><br>


    <form class="forms" role="form" method ="get" action ="/Admin/AssignCourseStudent">

        <div>
        <select  id ="ssid" name ="sid" style ="width:70%">
          <option>-Student ID-</option>  
        </select>
            </div><br><br>
        <div>
        <select  id ="ccid" name ="cid" style ="width:70%">
          <option>-Course ID-</option>  
        </select>
            </div>
         
        <br><button class="k-primary" type="submit" style ="width:70%" id ="save">Submit</button>
        

    </form>
     
</div>


