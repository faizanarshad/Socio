 <form class="forms" action ="/Admin/EditConfirmed" method ="post">    
<div class ="k-content" style ="background-color:mintcream; height:auto; width:40%;margin-left:25%">   
  <fieldset>
        <legend style ="font-size:xx-large">Edit User:</legend>

        @Html.HiddenFor(model => model.uid)

        <div class="editor-label" style ="font-size:large">
            Name
        </div>
        <div class="editor-field" style ="font-size:small">
            @Html.TextBoxFor(model => model.name)
           
        </div>
         <div class="editor-label" style ="font-size:large">
            Type
        </div>

        <div class="editor-field" style ="font-size:small">
            @Html.TextBoxFor(model => model.type)
           
        </div>
       <div class="editor-label" style ="font-size:large">
            Password        

       </div>

        <div class="editor-field" style ="font-size:small">
            @Html.TextBoxFor(model => model.password)
           
        </div>

        <div class="editor-label" style ="font-size:large; ">
           Email

        </div>
        <div class="editor-field" style ="font-size:small">
            @Html.TextBoxFor(model => model.email)
           
        </div><br>

        <button class="k-primary" type="submit" style ="width:30%" value ="Save" >Save</button>
       
    </fieldset>
    </div>
     </form>