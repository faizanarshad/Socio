<script>
$(document).ready(function () {
            
                $("#ccid").focusin(function () {

                    $("#ccid option").remove();

                    $.getJSON("/Admin/GetCourses", function (data) {
                       
                        $.each(data, function (i, item) {
                            $("#ccid").append('<option value=' + item.cid + '>' + item.cid + '</option>');
                            
                        });

                    });
                });

                $("#ttid").focusin(function () {

                    $("#ttid option").remove();

                    $.getJSON("/Admin/GetTeachers", function (data) {

                        $.each(data, function (i, item) {
                            $("#ttid").append('<option value=' + item.tid + '>' + item.tid + '</option>');

                        });

                    });
                });

            });
</script>

<div class ="l-content" style="height:auto; width:40%; margin-left:25%">
        <h2 class="k-header">Assign Course To Teacher:</h2><br>

    <form class="forms" role="form" method ="get" action ="/Admin/AssignCourse">

        <div>
        <select id ="ttid" name ="tid" style ="width:70%">
          <option>-Teacher ID-</option>  
        </select>
            </div><br><br>
        <div>
        <select id ="ccid" name ="cid" style ="width:70%">
          <option>-Course ID-</option>  
        </select>
            </div>
        <br><br>
        <div class="editor-field"> 
                    Select Fall:
                    <select id = "fall" name ="fall" >
          		        <option value="140">140</option>
                        <option value="141">141</option>
          		        <option value="142">142</option>
                        <option value="143">143</option>
                        <option value="144">144</option>
                        <option value="145">145</option>
                        <option value="146">146</option>
                        <option value="147">147</option>
                        <option value="148">148</option>
                  </select>

                   Select Degree:

                        <select id = "degree" name ="degree" >
          		        <option value="BCS">BCS</option>
                        <option value="BIT">BIT</option>
          		        <option value="MCS">MCS</option>
                        <option value="MIT">MIT</option>
                  </select>
                
                     Select Section:
                      <select id = "section" name ="section" >
          		        <option value="M">Morning</option>
                        <option value="A">Afternoon</option>
                  </select>
        </div>

         
        <br><button class="k-primary" type="submit" style ="width:70%" id ="save">Submit</button>
        

    </form>
     
</div>
