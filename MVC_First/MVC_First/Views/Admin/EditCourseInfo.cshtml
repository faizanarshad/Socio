<script>
$(document).ready(function () {
            
                $("#ccid").focusin(function () {

                    $("#ccid option").remove();

                    $.getJSON("/Admin/GetCourses", function (data) {
                       
                        $.each(data, function (i, item) {
                            $("#ccid").append('<option value=' + item.cid + '>' + item.cid + '</option>');
                            
                        });

                    });
                });
            });
</script>


<div class ="l-content" style="height:auto; width:40%; margin-left:25%">
        <h2 class="k-header">Edit Course:</h2><br>

    <form class="forms" role="form" method ="post" action ="/Admin/EditCourse">

        <div>
        <select  id ="ccid" name ="cid" style ="width:60%">
          <option>-Course ID-</option>  
        </select>
            </div>
         
        <br><button class="k-primary" type="submit" style ="width:60%" id ="save">Submit</button>
        

    </form>
     
