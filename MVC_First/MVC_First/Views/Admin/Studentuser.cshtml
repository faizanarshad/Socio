<div class ="k-content" style ="background-color:mintcream; height:auto; width:50%;margin-left:25%"> 

<h2 class="k-header">Student Users Info:</h2>

<p style ="font-size:medium">
    @Html.ActionLink( "Create New","AddSingleUser")
</p>
<table class="metrotable">

    <tr>
        <th style ="font-size:medium">
            User ID
        </th>
        <th style ="font-size:medium">
            Name
        </th>
        <th style ="font-size:medium">
            Type
        </th>
        <th style ="font-size:medium">
            Password
        </th>
        <th style="font-size:medium">
            Department
        </th>
        <th style ="font-size:medium">
            Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.uid)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td style="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.dept)
        </td>
        <td style ="font-size:small;text-align:center">
            @Html.DisplayFor(modelItem => item.email)
        </td>
        
    </tr>
}

</table>
